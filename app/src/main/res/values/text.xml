<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SearchField">
        <item name="android:textAppearance">@style/TA_Regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/grey808185</item>
        <item name="android:textColor">@color/greyE9EAEF</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="TabName"  parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TA_Bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="ChannelTitle" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/TA_Medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="ChannelSubTitle" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/TA_Regular</item>
        <item name="android:textColor">@color/greyE9EAEF</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

</resources>